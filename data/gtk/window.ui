<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SwApplicationWindow" parent="AdwApplicationWindow">
    <property name="width_request">350</property>
    <property name="height_request">100</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 625px</condition>
        <setter object="split_view" property="max-sidebar-width">99999</setter>
        <setter object="split_view" property="collapsed">True</setter>
        <setter object="toolbar_controller_revealer" property="reveal-child">True</setter>
      </object>
    </child>
    <child>
      <object class="AdwBreakpoint">
        <condition>min-width: 625px</condition>
        <setter object="split_view" property="show_sidebar">True</setter>
      </object>
    </child>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-height: 150px</condition>
        <setter object="stack" property="visible-child">mini_controller_handle</setter>
      </object>
    </child>
    <child>
      <object class="GtkStack" id="stack">
        <property name="hhomogeneous">False</property>
        <property name="vhomogeneous">False</property>
        <child>
          <object class="AdwToastOverlay" id="toast_overlay">
            <child>
              <object class="AdwOverlaySplitView" id="split_view">
                <property name="sidebar-position">end</property>
                <property name="pin-sidebar">True</property>
                <property name="min-sidebar-width">300</property>
                <property name="content">
                  <object class="AdwNavigationPage">
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="AdwNavigationView" id="navigation_view">
                            <child>
                              <object class="SwLibraryPage" id="library_page"/>
                            </child>
                            <child>
                              <object class="SwDiscoverPage" id="discover_page"/>
                            </child>
                            <child>
                              <object class="SwSearchPage" id="search_page"/>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkRevealer" id="toolbar_controller_revealer">
                            <property name="transition_type">slide-up</property>
                            <child>
                              <object class="GtkBox" id="toolbar_controller_box"/>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkWindowHandle" id="mini_controller_handle">
            <child>
              <object class="GtkBox" id="mini_controller_box"/>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

